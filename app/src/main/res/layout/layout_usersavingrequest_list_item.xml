<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_card_required"
    style="@style/CardViewUsual"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    app:cardBackgroundColor="@color/detailed_card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/activity_add_title_require"
            style="@style/TitleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="Saving Request Details" />

        <TextView
            android:id="@+id/activity_add_title_required"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="16dp"
            android:text="Info" />

        <RelativeLayout
            android:id="@+id/activity_add_rl_proteins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_add_title_require"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/activity_add_title_proteins"
                style="@style/TextUsualBlackSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:text="Title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/usersavingrequest_title"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="180dp"
                android:layout_marginEnd="16dp"
                android:textAlignment="textStart"
                tools:text="Village"

                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_add_rl_savingamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_add_rl_proteins"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/activity_add_title_savingamount"
                style="@style/TextUsualBlackSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:text="Saving Amount" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/usersavingrequest_savingamount"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="180dp"
                android:layout_marginEnd="16dp"
                android:textAlignment="textStart"
                tools:text="299"

                />


        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/activity_add_rl_carbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_add_rl_savingamount"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp">

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextUsualBlackSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:text="Description" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/usersavingrequest_body"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="180dp"
                android:layout_marginEnd="16dp"

                android:ellipsize="end"
                android:maxLines="2"
                android:textAlignment="textStart"
                tools:text="Aurangabad"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_add_rl_authorsender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_add_rl_carbs"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            >

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextUsualBlackSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:text="Member Name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/usersavingrequest_authorsender"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="180dp"
                android:layout_marginEnd="16dp"

                android:ellipsize="end"
                android:maxLines="2"
                android:textAlignment="textStart"
                tools:text="Guest"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_add_rl_subreddit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_add_rl_authorsender"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextUsualBlackSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:text="@string/shg_name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/subreddit_title"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="180dp"
                android:layout_marginEnd="16dp"

                android:ellipsize="end"
                android:maxLines="2"
                android:textAlignment="textStart"
                tools:text="SHG-Shrirampur-A"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_add_rl_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_add_rl_subreddit"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/update_saving_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginTop="16dp"
                app:icon="@drawable/ic_edit_white_24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />


        </RelativeLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>