<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_card_required"
    style="@style/CardViewUsual"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    app:cardBackgroundColor="@color/detailed_card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/activity_add_title_require"
            style="@style/TitleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="@string/shg_member_details" />

        <TextView
            android:id="@+id/activity_add_title_required"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="16dp"
            android:text="Info" />

        <RelativeLayout
            android:id="@+id/activity_add_rl_proteins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_add_title_require"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/activity_add_title_proteins"
                style="@style/TextUsualBlackSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:text="Name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/subuser_title"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="180dp"
                android:layout_marginEnd="16dp"
                android:textAlignment="textStart"
                tools:text="Village"

                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_add_rl_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_add_rl_proteins"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/loan_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="16dp"
                android:text="Loan"
                app:icon="@drawable/ic_baseline_donut_small_24" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/saving_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/loan_button"
                android:text="Saving"
                app:icon="@drawable/ic_baseline_monetization_on_24" />

            <!--                        <com.google.android.material.button.MaterialButton-->
            <!--                            android:id="@+id/saving_button"-->
            <!--                            style="@style/Widget.MaterialComponents.Button.TextButton"-->
            <!--                            android:layout_width="wrap_content"-->
            <!--                            android:layout_height="wrap_content"-->
            <!--                            android:layout_marginEnd="16dp"-->
            <!--                            android:text="Save"-->
            <!--                            android:layout_marginTop="16dp"-->
            <!--                            app:icon="@drawable/vd_bookmark_border"-->
            <!--                            android:layout_toRightOf="@+id/update_subreddit_button"-->
            <!--                            android:layout_centerVertical="true" />-->


        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>