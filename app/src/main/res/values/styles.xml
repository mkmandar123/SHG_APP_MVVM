<resources>


    <!--    Main application theme styles-->
    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:colorControlNormal">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>
    <!--     textSwitcher-->
    <style name="TextInDateSwitcher">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">10</item>
    </style>

    <!--    fab -->
    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/colorSecondary300</item>
    </style>

    <style name="ExtendedFab">
        <item name="android:backgroundTint">@color/colorSecondary300</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
    </style>

    <!--    alert dialog-->
    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorSecondary500</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorSecondary400</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="rippleColor">@color/delete_ripple</item>
    </style>


    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/colorSecondary400</item>
        <item name="rippleColor">@color/delete_ripple</item>
    </style>


    <style name="Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SearchTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:singleLine">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MainTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MainTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--    toolbar-->

    <style name="ToolbarTheme.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@null</item>
        <item name="background">@null</item>
        <item name="android:colorControlNormal">@color/black</item>
        <item name="titleTextAppearance">@style/ToolbarTheme.Title</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorControlHighlight">@color/arrow_ripple</item>
    </style>

    <style name="CollapsingToolbar">
        <item name="android:fitsSystemWindows">true</item>
        <item name="contentScrim">@color/background</item>
        <item name="scrimAnimationDuration">300</item>
        <item name="scrimVisibleHeightTrigger">60dp</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="expandedTitleTextAppearance">@style/CollapsingToolbar.Title</item>

    </style>

    <style name="CollapsingToolbar.Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TextUsual">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextUsualSmall">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SearchActivityTextOptions">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextUsualBold">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextUsualBlack">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextUsualBlackSmall">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleNormal">

        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>



    <style name="MaterialButtonStyle">
        <item name="android:maxLines">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:height">50dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textIsSelectable">false</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="CardViewUsual">
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="cardBackgroundColor">@color/statusBar</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="TitleBold">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PreferenceTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/preference_title</item>

    </style>

    <style name="PreferenceTextUsual">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorText_desc</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">70dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="TextNotFound">
        <item name="android:textColor">@color/colorPrimary600</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">20dp</item>

    </style>

    <style name="TextAbout">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAbout.Title" parent="TextAbout">
        <item name="android:textColor">@color/colorText</item>
    </style>


    <style name="TextAbout.Description" parent="TextAbout">
        <item name="android:textColor">@color/delete_ripple</item>

    </style>
    <style name="ColorSwitchStyle">
        <item name="colorControlActivated">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>
</resources>
